<% if (errors.length > 0) { %>
<div class="row">
    <div class="col my-3"></div>
    <div class="alert alert-danger">
        <% errors.forEach(error => { %>
        <%= error %><br>
        <% }); %>
    </div>
</div>
<% } %>

<% if (success.length > 0) { %>
<div class="row">
    <div class="col my-3"></div>
    <div class="alert alert-success">
        <% success.forEach(success => { %>
        <%= success %><br>
        <% }); %>
    </div>
</div>
<% } %>