<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar Conta ou Entrar</h1>
      <p class="text-center lead">Faça o login ou crie sua conta abaixo</p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg my-3">
          <h4>Faça seu cadastro</h4>
          <p>Se ainda não tiver uma conta, crie-a aqui.</p>
          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary my-2">Cadastrar</button>
          </form>
        </div>

        <div class="col-lg my-3">
          <h4>Faça seu login</h4>
          <p>Se já possuir uma conta, entre aqui.</p>
          <form action="/login/login" method="post">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary my-2">Entrar</button>
          </form>
        </div>

      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>